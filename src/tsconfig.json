{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "lib": ["dom", "es2015"],
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        }
    }
}
